<div class="row">
    <div class="col-lg-12">
        <h1><%= Settings.projects.title %></h1>
    </div>
    <!-- Project -->
    <div class="col-lg-6 panel panel-default">
      <div class="panel-heading"><strong><%= Settings.projects[:beaconbot].title %></strong></div>
      <div class="panel-body embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="<%= Settings.projects[:beaconbot].media %>" frameborder="0" allowfullscreen></iframe>
      </div>
      <div class="panel-footer intro">
        <%= Settings.projects[:beaconbot].text %>
      </div>
    </div>

    <!-- Project -->
    <div class="col-lg-6 panel panel-default">
      <div class="panel-heading"><strong><%= Settings.projects[:ask].title %></strong></div>
      <div class="panel-body embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="<%= Settings.projects[:ask].media %>" frameborder="0" allowfullscreen></iframe>
      </div>
      <div class="panel-footer intro">
        <%= Settings.projects[:ask].text %>
      </div>
    </div>

    <!-- Project -->
    <div class="col-lg-6 panel panel-default">
      <div class="panel-heading"><strong><%= Settings.projects[:sdr].title %></strong></div>
      <div class="panel-body">
        <% Settings.projects[:sdr].media.each do |item| %>
          <div class="col-xs-6 col-sm-3">
            <%= image_tag item, class: "img-responsive img-thumbnail" %>
          </div>
        <% end %>
      </div>
      <div class="panel-footer intro">
        <%= Settings.projects[:sdr].text %>
      </div>
    </div>

    <!-- Project -->
    <div class="col-lg-6 panel panel-default">
      <div class="panel-heading"><strong><%= Settings.projects[:minesweeper].title %></strong></div>
      <div class="panel-body">
        <% Settings.projects[:minesweeper].media.each do |item| %>
          <div class="col-xs-4 col-sm-4">
            <%= image_tag item, class: "img-responsive img-thumbnail" %>
          </div>
        <% end %>
      </div>
      <div class="panel-footer intro">
        <%= Settings.projects[:minesweeper].text %>
      </div>
    </div>
</div>
