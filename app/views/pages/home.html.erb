<!-- Intro Section -->
<section id="intro" class="intro-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Scrolling Nav</h1>
                <p><strong>Usage Instructions:</strong> Make sure to include the <code>scrolling-nav.js</code>, <code>jquery.easing.min.js</code>, and <code>scrolling-nav.css</code> files. To make a link smooth scroll to another section on the page, give the link the <code>.page-scroll</code> class and set the link target to a corresponding ID on the page.</p>
                <a class="btn btn-default page-scroll" href="#projects">Click Me to Scroll Down!</a>
            </div>
        </div>
    </div>
</section>

<% [:projects, :resume, :contact].each do |key| %>
  <section id="<%= header_menus(key).downcase %>" class="<%= header_menus(key).downcase %>-section">
      <div class="container">
          <div class="row">
              <div class="col-lg-12">
                  <h1><%= header_menus(key) %> Section</h1>
              </div>
          </div>
      </div>
  </section>
<% end %>
